<div>
  <div class="m-3">
    <h1> My Tasks</h1>
    <ul>
      <% @tasks.each do |task| %>
        <div class="d-flex">
          <li><i class="far fa<%= "-check" if task.completed %>-square"></i><%= link_to task.title, task_path(task) %> <%= link_to "Delete",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
        </div>

      <% end %>
    </ul>
    <div id="line-break"></div>
    <div>
      <%= link_to "Add a new task", new_task_path %>
    </div>
  </div>
</div>
